<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3eb489"
    tools:context=".NewContactActivity">

    <!-- Header TextView -->

    <!-- Microphone Button -->

    <!-- Name and Surname EditText -->

    <!-- Phone Number EditText -->

    <TextView
        android:id="@+id/textView_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:text="ΝΕΑ ΕΠΑΦΗ"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/button_microphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMargin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_btn_speak_now"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- Add Button -->

    <!-- Return Button -->

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_header"
        app:layout_constraintWidth_default="spread">

        <EditText
            android:id="@+id/editText_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="ΟΝΟΜΑ"
            android:textSize="24sp"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/editText_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="ΕΠΩΝΥΜΟ"
            android:textSize="24sp"
            android:textColorHint="#AAAAAA" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_first_name"
        app:layout_constraintWidth_default="spread"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:text="69XXXXXXXXX"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="253dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:background="#00C853"
        app:backgroundTint="@null"
        android:text="ΠΡΟΣΘΗΚΗ"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_phone_number"
        app:layout_constraintWidth_default="spread" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:background="#D32F2F"
        app:backgroundTint="@null"
        android:text="ΕΠΙΣΤΡΟΦΗ"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add"
        app:layout_constraintWidth_default="spread" />

    =

</androidx.constraintlayout.widget.ConstraintLayout>
